# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                      controllers.Application.index

# Equation pages
GET    /equation              controllers.Application.equations
POST   /equation              controllers.Application.newEquation
POST   /equation/:id/delete   controllers.Application.deleteEquation(id: Int)

# Derivative Question / Answer pages
GET    /selfquiz              controllers.Application.selfQuizQuestions
POST   /selfquiz              controllers.Application.newSelfQuizQuestion
POST   /selfquiz/:id/delete   controllers.Application.deleteSelfQuizQuestion(id: Int)
GET    /selfquiz/:id/take     controllers.Application.takeSelfQuizQuestion(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file          controllers.Assets.at(path="/public", file)