# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Remove trailing /'s from paths 
GET    /*path/                               controllers.Application.untrail(path: String)

# Home page
GET    /                                     controllers.Application.index

# Equation pages
GET    /equation                             controllers.EquationController.equations
POST   /equation                             controllers.EquationController.newEquation
POST   /equation/:id/delete                  controllers.EquationController.deleteEquation(id: Long)

# Derivative question pages
GET    /selfquiz                             controllers.DerivativeQuestionController.selfQuiz
GET    /selfquiz/question                    controllers.DerivativeQuestionController.questions
GET    /selfquiz/question/:qid               controllers.DerivativeQuestionController.question(qid: Long, sid: Option[Long])
POST   /selfquiz/question                    controllers.DerivativeQuestionController.newQuestion
POST   /selfquiz/question/:qid/delete        controllers.DerivativeQuestionController.deleteQuestion(qid: Long) 

# Derivative answer pages
GET    /selfquiz/question/:qid/answer        controllers.DerivativeQuestionAnswerController.answers(qid: Long)
GET    /selfquiz/question/:qid/answer/:aid   controllers.DerivativeQuestionAnswerController.answer(qid: Long, aid : Long, sid: Option[Long])
POST   /selfquiz/question/:qid/answer/       controllers.DerivativeQuestionAnswerController.newAnswer(qid: Long, sid: Option[Long])

# Derivative queston set pages
GET    /selfquiz/questionset                 controllers.DerivativeQuestionSetController.sets
GET    /selfquiz/questionset/:sid            controllers.DerivativeQuestionSetController.setAnswer(sid: Long)
GET    /selfquiz/questionset/:sid/edit       controllers.DerivativeQuestionSetController.setEdit(sid: Long)
GET    /selfquiz/questionset/create          controllers.DerivativeQuestionSetController.setCreate
POST   /selfquiz/questionset                 controllers.DerivativeQuestionSetController.newSet
POST   /selfquiz/questionset/:sid/update     controllers.DerivativeQuestionSetController.updateSet(sid: Long)


# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                         controllers.Assets.at(path="/public", file)