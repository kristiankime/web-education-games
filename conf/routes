# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                         controllers.Application.index

# Equation pages
GET    /equation                 controllers.Application.equations
POST   /equation                 controllers.Application.newEquation
POST   /equation/:id/delete      controllers.Application.deleteEquation(id: Int)

# Derivative Question / Answer pages
GET    /derivativeq              controllers.Application.derivativeq
POST   /derivativeq              controllers.Application.newDerivativeq
POST   /derivativeq/:id/delete   controllers.Application.deleteDerivativeq(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file             controllers.Assets.at(path="/public", file)