# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Remove trailing /'s from paths 
GET    /*path/                               controllers.Application.untrail(path: String)

# Home page
GET    /                                     controllers.Application.index

# Equation pages
GET    /equation                             controllers.Equation.equations
POST   /equation                             controllers.Equation.newEquation
POST   /equation/:id/delete                  controllers.Equation.deleteEquation(id: Long)

# Derivative question pages
GET    /selfquiz                             controllers.DerivativeQuestion.selfQuiz
GET    /selfquiz/question                    controllers.DerivativeQuestion.selfQuizQuestions
GET    /selfquiz/question/:qid               controllers.DerivativeQuestion.selfQuizQuestion(qid: Long)
POST   /selfquiz/question                    controllers.DerivativeQuestion.newSelfQuizQuestion
POST   /selfquiz/question/:qid/delete        controllers.DerivativeQuestion.deleteSelfQuizQuestion(qid: Long) 

# Derivative answer pages
GET    /selfquiz/question/:qid/answer        controllers.DerivativeQuestionAnswer.selfQuizAnswers(qid: Long)
GET    /selfquiz/question/:qid/answer/:aid   controllers.DerivativeQuestionAnswer.selfQuizAnswer(qid: Long, aid : Long)
POST   /selfquiz/question/answer/            controllers.DerivativeQuestionAnswer.answerSelfQuizQuestion

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                         controllers.Assets.at(path="/public", file)